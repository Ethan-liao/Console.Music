<% include ./header %>

    <div class="container">

      <h4>My Posts</h4>
        <div class="row">

        <% posts.forEach((post) => { %>

            <div class="col s4">
              <div class="card small">
                <!-- <p hidden><%= post.type %></p> -->
                <div class="card-image waves-effect waves-block waves-light">
                  <img class="activator" src="<%= post.image_url %>" alt="<%= post.title %>">
                </div>
                <div class="card-content">
                  <span class="card-title activator grey-text text-darken-4"><%= post.title %><i class="material-icons right">more_vert</i></span>
                  <p><%= post.artist %></p>
                  <a href="<%=post.preview_url%>" target='_blank'>Preview</a>
                </div>
                <div class="card-reveal">
                  <span class="card-title grey-text text-darken-4"><%= post.title %><i class="material-icons right">close</i></span>
                  <p><%= post.artist %></p>
                  <a href="<%= post.track_url %>" target='_blank'><p>Link to Track</p></a>
                  <p>Comment:</p>
                  <p><%= post.comment %></p>
                  <form method="POST" action="/my_posts/<%=post.id%>?_method=DELETE">
                    <a href=""><button type="button" class="btn btn-defualt">Edit</button></a>
                    <button type="submit" class="btn btn-defualt" onclick="Materialize.toast('This post has been removed', 4000)">Remove</button>
                  </form>
                </div>
              </div>
            </div>

        <% }); %>

      </div>

    </div>

  </body>

<% include ./footer %>
