<% include ./header %>

    <div class="container">

      <h4>Tracks</h4>
        <div class="row">

        <% posts.forEach((post) => { %>

            <div class="col s4">
              <div class="card small">
                <!-- <p hidden><%= post.type %></p> -->
                <div class="card-image waves-effect waves-block waves-light">
                  <img class="activator" src="<%= post.image_url %>" alt="<%= post.title %>">
                </div>
                <div class="card-content">
                  <span class="card-title activator grey-text text-darken-4"><%= post.title %><i class="material-icons right">more_vert</i></span>
                  <p><%= post.artist %></p>
                  <a href="<%=post.preview_url%>" target='_blank'>Preview</a>
                </div>
                <div class="card-reveal">
                  <span class="card-title grey-text text-darken-4"><%= post.title %><i class="material-icons right">close</i></span>
                  <p><%= post.artist %></p>
                  <a href="<%= post.track_url %>"><p>Link to Track</p></a>
                  <p>Comment:</p>
                  <p><%= post.comment %></p>
                </div>
              </div>
            </div>

        <% }); %>

      </div>

    </div>

  </body>

<% include ./footer %>
